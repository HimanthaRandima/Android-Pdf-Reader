<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_mode_lite"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="One Reader"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_search"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/help"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_help"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/fab"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/diamond"
                app:tint="@color/white" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:background="@drawable/bg_round_background">


            <ListView
                android:id="@+id/lv_pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:divider="@color/teal_200"
                android:dividerHeight="0.4dp"
                android:longClickable="false"
                android:scrollbars="none">

            </ListView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:layout_marginHorizontal="15dp"
                android:src="@drawable/header_transparent"
                app:tint="@color/dark_mode_rose" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>